<style>
.messaging { 
  padding: 0 0 50px 0;
  }
  .inbox_msg {
  border: 1px solid #c4c4c4;
  

}
  .msg_history {
  height: 100%;
  overflow-y: scroll;

} 
.type_msg {
  border-top: 1px solid #c4c4c4;
  position: relative;
  }
.input_msg_write input {
  background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
  border: medium none;
  color: #4c4c4c;
  font-size: 15px;
  min-height: 48px;
  width: 100%;
}


</style>
<body>
<div class="container">
<h3 class=" text-center">Messaging</h3>
<div class="messaging">
    <div class="inbox_msg">
        <div class="msg_history">
                  <% @messages.each do |message|%>
                    <% if current_user.id == message.user_id %>
                      <div class="received_msg">
                        <div class="received_withd_msg">
                          <p><%=message.content%></p>
                          <span class="time_date"> <%=message.created_at%>    |   <%=message.user_id%> </span></div>
                        </div>
                      </div>
                    <% else %>
                      <div class="outgoing_msg">
                        <div class="sent_msg">
                          <p><%=message.content%></p>
                          <span class="time_date"> <%=message.created_at%>    |    <%=message.user_id%> </span> </div>
                        </div>
                      </div>
                    <%end%>
                  <%end%>
        </div>
    </div>

</div>
          <div class="type_msg">
            <div class="input_msg_write">
              <%= form_with model: [@room, @message], local: true do |f|%>
              
                <%= f.text_field :content, class: 'write_msg', placeholder: 'type a messaage' %>
                <i class="fa fa-paper-plane-o" aria-hidden="true"></i><%= f.submit '送信', class: 'btn btn-primary' %>
                <% end %>
            </div>
          </div>

